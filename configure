#!/usr/bin/env bash

## Builds CMake structure with platformio for Clion
for PROJECT in $(ls -d ${1:-.}/*/platformio.ini); do
    cd ${PROJECT%*/*}
    mv ./CMakeLists.txt ./CMakeLists_backup.txt
    platformio init --ide clion
    rm ./.travis.yml ./lib/readme.txt ./CMakeLists.txt
    mv ./CMakeLists_backup.txt ./CMakeLists.txt
    cd ..
done